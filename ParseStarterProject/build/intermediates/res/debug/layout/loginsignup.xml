<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/login"
    android:weightSum="100"

    >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/etusername"
        android:textColor="#000000"
        android:hint="Insert username"
        android:layout_marginTop="223dp"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:id="@+id/etpassword"
        android:hint="Insert password"
        android:layout_below="@+id/etusername"
        android:layout_alignLeft="@+id/etusername"
        android:layout_alignStart="@+id/etusername"
        android:layout_marginTop="59dp"
        android:layout_alignRight="@+id/etusername"
        android:layout_alignEnd="@+id/etusername" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Login"
        android:textColor="#000000"
        android:alpha="1.0"
        android:id="@+id/login"
        android:layout_below="@+id/etpassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SignUp"
        android:textColor="#000000"
        android:alpha="1.0"
        android:id="@+id/signup"
        android:layout_below="@+id/login"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout><!-- From: file:/C:/Users/Thechosenone/Desktop/Parse/ParseStarterProject/res/layout/loginsignup.xml -->